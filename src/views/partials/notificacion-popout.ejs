<!-- POP OUT -->

<!-- Popout de solicitud de amistad (existente) -->
<div id="popout-solicitud" class="fixed bottom-6 right-6 z-50 bg-cyan-200 text-cyan-900 px-6 py-4 rounded-xl shadow-2xl border border-cyan-400 opacity-0 pointer-events-none transition-all duration-300 flex items-center gap-4" style="min-width: 250px;">
    <span id="popout-solicitud-msg"></span>
    <button onclick="this.parentElement.classList.add('opacity-0','pointer-events-none')" class="ml-2 text-cyan-700 hover:text-red-500 text-xl font-bold">&times;</button>
</div>

<!-- Popout de comentario (con el mismo estilo) -->
<div id="popout-comentario" class="fixed bottom-6 right-6 z-50 bg-cyan-200 text-cyan-900 px-6 py-4 rounded-xl shadow-2xl border border-cyan-400 opacity-0 pointer-events-none transition-all duration-300 flex items-center gap-4" style="min-width: 250px;">
    <img id="popout-comentario-img" src="/default-user.jpg" alt="Autor" class="w-8 h-8 rounded-full object-cover">
    <div class="flex-1">
        <span id="popout-comentario-msg" class="font-medium"></span>
    </div>
</div>