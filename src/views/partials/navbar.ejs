<script>
    (function () {
        const btnMobile = document.getElementById('btn-mobile-menu');
        const menuItems = document.getElementById('mobile-menu');
        const menuPath = document.getElementById('menu-path');
        let isOpen = false;

        const toggleMenu = () => {
            isOpen = !isOpen;
            if (isOpen) {
                menuItems.style.maxHeight = '600px';
                menuPath.setAttribute('d', 'M6 18L18 6M6 6l12 12');
                menuItems.classList.add('shadow-2xl');
            } else {
                menuItems.style.maxHeight = '0';
                menuPath.setAttribute('d', 'M4 6h16M4 12h16m-7 6h7');
                menuItems.classList.remove('shadow-2xl');
            }
        };

        btnMobile?.addEventListener('click', (e) => {
            e.stopPropagation();
            toggleMenu();
        });


        document.addEventListener('click', (e) => {
            if (isOpen && !menuItems.contains(e.target) && !btnMobile.contains(e.target)) {
                toggleMenu();
            }
        });

        const input = document.querySelector('input[name="query"]');
        const icono = document.getElementById('icono-ojo');

        function actualizarIcono() {
            if (!icono) return;
            if (document.activeElement === input || input.value.length > 0) {
                icono.innerHTML = '<use href="#ojo-abierto"></use>';
            } else {
                icono.innerHTML = '<use href="#ojo-cerrado"></use>';
            }
        }

        if (input) {
            actualizarIcono();
            input.addEventListener('focus', actualizarIcono);
            input.addEventListener('blur', actualizarIcono);
            input.addEventListener('input', actualizarIcono);
        }
    })();
</script>