<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>
        <%= album.titulo %> - Artesanos.com
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="/favicon.png" type="image/png">
</head>

<body class="min-h-screen bg-black"
    style="background-image: url('/fondo.png'); background-size: cover; background-repeat: no-repeat; background-position: center;">
    <%- include('partials/navbar') %>
        <%- include('partials/icons') %>

            <div class="fixed inset-0 backdrop-blur-md bg-black/10 z-0"></div>

            <div class="relative z-10 min-h-screen w-full py-16 pt-24 px-8">

                <div class="text-white mb-6">
                    <a href="/home" class="underline font-semibold">home</a> &gt; <span class="font-semibold">
                        <%= album.titulo %>
                    </span>
                </div>

                <!-- Grid de imágenes -->
                <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-8 justify-items-center">

                    <div>
                        <!-- Botón de agregar imagen  -->
                        <% if (usuarioLogueado && usuarioLogueado.id===album.id_usuario) { %>
                            <button id="abrirModalImagen"
                                class="w-64 h-40 flex flex-col items-center justify-center border-2 border-cyan-400 rounded-lg bg-cyan-900/40 hover:bg-cyan-700/60 transition-all text-white text-6xl font-bold mb-2">
                                +
                            </button>
                            <div class="text-center text-white"> agregar imagen</div>
                            <% } %>

                    </div>

                    <!-- Imágenes del álbum -->
                    <% if (imagenes && imagenes.length> 0) { %>
                        <% imagenes.forEach(function(img) { %>
                            <div
                                class="w-64 h-48 rounded-lg overflow-hidden border-2 border-cyan-400 bg-cyan-900/60 shadow-lg flex flex-col items-center hover:scale-105 transition-all relative group">
                                <!-- Botón compartir (solo si soy dueño) -->
                                <% if (usuarioLogueado && usuarioLogueado.id===album.id_usuario) { %>
                                    <button onclick="toggleCompartir('<%= img.id_imagen %>', this)"
                                        class="absolute top-2 right-2 p-1.5 rounded-full bg-black/60 backdrop-blur-md transition-all <%= img.compartida ? 'text-yellow-400' : 'text-gray-400 opacity-0 group-hover:opacity-100 hover:text-white' %>"
                                        title="<%= img.compartida ? 'Dejar de compartir' : 'Compartir con amigos' %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5"
                                            fill="<%= img.compartida ? 'currentColor' : 'none' %>" viewBox="0 0 24 24"
                                            stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                        </svg>
                                    </button>
                                    <% } %>

                                        <img src="<%= img.url %>" alt="<%= img.titulo || 'Imagen' %>"
                                            class="object-cover w-full h-32 cursor-pointer imagen-album"
                                            data-url="<%= img.url %>" data-titulo="<%= img.titulo || 'Sin título' %>"
                                            data-descripcion="<%= img.descripcion || '' %>"
                                            data-id="<%= img.id_imagen %>">
                                        <div
                                            class="text-white text-xs mt-1 px-2 mt-4 truncate w-full text-center font-semibold">
                                            <%= img.titulo || 'Sin título' %>
                                        </div>

                                        <!-- Comentarios ocultos para el modal -->
                                        <div id="comentarios-img-<%= img.id_imagen %>" class="hidden">
                                            <% if (img.comentarios && img.comentarios.length> 0) { %>
                                                <% img.comentarios.forEach(function(com) { %>
                                                    <div class="flex gap-2 items-start mb-2">
                                                        <img src="<%= com.imagen_perfil === 'default-user.jpg' ? '/default-user.jpg' : com.imagen_perfil %>"
                                                            class="w-8 h-8 rounded-full object-cover">
                                                        <div>
                                                            <div class="font-semibold text-cyan-200 text-sm">
                                                                <%= com.alias %>
                                                            </div>
                                                            <div class="text-white text-sm">
                                                                <%= com.texto %>
                                                            </div>
                                                            <div class="text-xs text-cyan-400">
                                                                <%= com.creado_en.toLocaleString() %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <div class="text-cyan-300 text-sm">Sin comentarios aún.
                                                            </div>
                                                            <% } %>
                                        </div>
                            </div>
                            <% }) %>
                                <% } %>
                </div>

            </div>

            <!-- Modal para ver imagen -->
            <div id="modalVerImagen" class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 hidden">
                <div
                    class="relative bg-sky-950 rounded-2xl shadow-2xl p-4 max-w-2xl w-full flex flex-col items-center border border-orange-800 border-2">
                    <button id="cerrarModalVerImagen" type="button"
                        class="absolute top-2 right-4 text-3xl text-gray-400 hover:text-red-500">&times;</button>
                    <img id="imagenModalSrc" src="" alt="Imagen ampliada"
                        class="max-h-[70vh] rounded-lg mb-4 shadow-lg">
                    <div id="tituloModal" class="text-white text-lg font-bold mb-2"></div>
                    <div id="descripcionModal" class="text-cyan-200 text-sm"></div>

                    <!-- comentario -->
                    <form id="formComentario" class="w-full mt-4 flex gap-2">
                        <input type="hidden" name="id_imagen" id="inputIdImagen">
                        <input type="text" name="texto" id="comentario" class="flex-1 rounded px-2 py-1"
                            placeholder="Escribe un comentario..." required>
                        <button type="submit" class="bg-cyan-600 text-white px-3 rounded">Comentar</button>
                    </form>

                    <div id="comentariosModal" class="w-full mt-4 max-h-48 overflow-y-auto space-y-2"></div>
                </div>
            </div>

            <!-- Modal para subir imagen -->
            <div id="modalImagen" class="fixed inset-0 z-50 flex items-center justify-center bg-black/40 hidden">
                <div
                    class="bg-sky-950 rounded-2xl p-8 w-full max-w-md shadow-2xl relative border border-orange-800 border-2">

                    <button id="cerrarModalImagen" type="button"
                        class="absolute top-2 right-4 text-2xl text-gray-400 hover:text-red-500">&times;</button>

                    <h2 class="text-2xl font-bold mb-4 text-white">Agregar imagen al álbum</h2>

                    <form action="/albumes/<%= album.id_album %>/imagenes/nueva" method="POST"
                        enctype="multipart/form-data" class="flex flex-col gap-3">

                        <input type="text" name="titulo" placeholder="Título de la imagen"
                            class="border rounded-lg px-3 py-2">
                        <textarea name="descripcion" placeholder="Descripción"
                            class="border rounded-lg px-3 py-2"></textarea>
                        <input type="file" name="imagen" accept="image/*" required class="mb-2">
                        <button type="submit"
                            class="text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 font-medium rounded-lg text-md px-5 py-2 text-center mb-2 hover:scale-107 hover:shadow-md transition-all">Subir
                            imagen</button>

                    </form>

                </div>

                <script src="/js/album.js"></script>
                <script src=" /socket.io/socket.io.js"></script>
                <script>
                    window.usuarioActual = {
                        id_usuario: "<%= usuario.id %>",
                        alias: "<%= usuario.alias %>",
                        imagen_perfil: "<%= usuario.imagen_perfil %>"
                    }
                </script>
                <script src="/js/comentarios.js"></script>

                <script>
                    async function toggleCompartir(id, btn) {
                        try {
                            const res = await fetch(`/albumes/imagenes/${id}/compartir`, { method: 'POST' });
                            const data = await res.json();
                            if (data.success) {
                                const svg = btn.querySelector('svg');
                                if (data.compartida) {
                                    btn.classList.add('text-yellow-400');
                                    btn.classList.remove('text-gray-400', 'opacity-0');
                                    svg.setAttribute('fill', 'currentColor');
                                    btn.title = 'Dejar de compartir';
                                } else {
                                    btn.classList.remove('text-yellow-400');
                                    btn.classList.add('text-gray-400', 'opacity-0');
                                    svg.setAttribute('fill', 'none');
                                    btn.title = 'Compartir con amigos';
                                }
                            }
                        } catch (err) {
                            console.error(err);
                        }
                    }
                </script>
</body>

<!-- TODO: CREAR PARTIALS PARA EVITAR LA IDENTACION -->

</html>