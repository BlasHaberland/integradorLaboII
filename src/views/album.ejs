<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>
        <%= album.titulo %> - Artesanos.com
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="/favicon.png" type="image/png">
</head>

<body class="min-h-screen bg-black"
    style="background-image: url('/fondo.png'); background-size: cover; background-repeat: no-repeat; background-position: center;">
    <%- include('partials/navbar') %>
        <%- include('partials/icons') %>

            <div class="fixed inset-0 backdrop-blur-md bg-black/10 z-0"></div>

            <div class="relative z-10 min-h-screen w-full py-16 pt-20 md:pt-24 px-4 md:px-8">

                <div class="text-white/60 text-sm mb-6 flex items-center gap-2">
                    <a href="/home" class="hover:text-cyan-400 transition-colors">home</a>
                    <span>&gt;</span>
                    <span class="text-white font-bold truncate">
                        <%= album.titulo %>
                    </span>
                </div>

                <!-- Grid de imágenes -->
                <div
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-6 justify-items-center">

                    <div class="w-full max-w-[280px]">
                        <!-- Botón de agregar imagen  -->
                        <% if (usuarioLogueado && usuarioLogueado.id===album.id_usuario) { %>
                            <button id="abrirModalImagen"
                                class="w-full aspect-video flex flex-col items-center justify-center border-2 border-dashed border-cyan-400/50 rounded-xl bg-cyan-900/20 hover:bg-cyan-700/40 hover:border-cyan-400 transition-all text-white group mb-3">
                                <span
                                    class="text-5xl font-light group-hover:scale-125 transition-transform text-cyan-400">+</span>
                                <div class="text-sm font-semibold mt-2 text-cyan-400/80">agregar imagen</div>
                            </button>
                            <% } %>
                    </div>

                    <!-- Imágenes del álbum -->
                    <% if (imagenes && imagenes.length> 0) { %>
                        <% imagenes.forEach(function(img) { %>
                            <div
                                class="w-full max-w-[280px] aspect-video rounded-xl overflow-hidden border-2 border-white/10 bg-cyan-900/40 shadow-xl flex flex-col items-center hover:scale-105 hover:border-cyan-400 transition-all relative group">
                                <!-- Botón compartir (solo si soy dueño) -->
                                <% if (usuarioLogueado && usuarioLogueado.id===album.id_usuario) { %>
                                    <button onclick="toggleCompartir('<%= img.id_imagen %>', this)"
                                        class="absolute top-2 right-2 p-1.5 rounded-full bg-black/60 backdrop-blur-md z-20 transition-all <%= img.compartida ? 'text-yellow-400' : 'text-gray-400 opacity-0 group-hover:opacity-100 hover:text-white' %>"
                                        title="<%= img.compartida ? 'Dejar de compartir' : 'Compartir con amigos' %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5"
                                            fill="<%= img.compartida ? 'currentColor' : 'none' %>" viewBox="0 0 24 24"
                                            stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                        </svg>
                                    </button>
                                    <% } %>

                                        <img src="<%= img.url %>" alt="<%= img.titulo || 'Imagen' %>"
                                            class="object-cover w-full h-full cursor-pointer imagen-album"
                                            data-url="<%= img.url %>" data-titulo="<%= img.titulo || 'Sin título' %>"
                                            data-descripcion="<%= img.descripcion || '' %>"
                                            data-id="<%= img.id_imagen %>">

                                        <div
                                            class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-3 pt-8">
                                            <div class="text-white text-sm font-bold truncate">
                                                <%= img.titulo || 'Sin título' %>
                                            </div>
                                        </div>

                                        <!-- Comentarios ocultos para el modal -->
                                        <div id="comentarios-img-<%= img.id_imagen %>" class="hidden">
                                            <% if (img.comentarios && img.comentarios.length> 0) { %>
                                                <% img.comentarios.forEach(function(com) { %>
                                                    <div class="flex gap-2 items-start mb-3 bg-white/5 p-2 rounded-lg">
                                                        <img src="<%= com.imagen_perfil === 'default-user.jpg' ? '/default-user.jpg' : com.imagen_perfil %>"
                                                            class="w-8 h-8 rounded-full object-cover shrink-0 border border-white/20">
                                                        <div>
                                                            <div
                                                                class="font-bold text-cyan-400 text-xs uppercase tracking-tighter">
                                                                <%= com.alias %>
                                                            </div>
                                                            <div class="text-white text-sm mt-0.5">
                                                                <%= com.texto %>
                                                            </div>
                                                            <div class="text-[10px] text-white/40 mt-1 uppercase">
                                                                <%= new Date(com.creado_en).toLocaleString() %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <div class="text-white/40 text-center py-4 italic text-sm">
                                                                Sin comentarios aún.
                                                            </div>
                                                            <% } %>
                                        </div>
                            </div>
                            <% }) %>
                                <% } %>
                </div>

            </div>

            <!-- Modal para ver imagen -->
            <div id="modalVerImagen"
                class="fixed inset-0 z-50 flex items-center justify-center bg-black/95 backdrop-blur-sm hidden p-2 md:p-6">
                <div
                    class="relative bg-sky-950 rounded-2xl shadow-2xl p-4 md:p-6 w-full max-w-4xl max-h-[95vh] flex flex-col md:flex-row gap-6 border border-white/20 overflow-y-auto md:overflow-hidden">

                    <button id="cerrarModalVerImagen" type="button"
                        class="absolute top-2 right-4 text-3xl text-white/60 hover:text-white z-30">&times;</button>

                    <!-- Imagen -->
                    <div
                        class="flex-1 flex items-center justify-center bg-black/40 rounded-xl overflow-hidden min-h-[300px] md:min-h-0">
                        <img id="imagenModalSrc" src="" alt="Imagen ampliada"
                            class="max-w-full max-h-full object-contain">
                    </div>

                    <!-- Detalles y Comentarios -->
                    <div class="w-full md:w-80 flex flex-col h-full">
                        <div class="border-b border-white/10 pb-4 mb-4">
                            <h2 id="tituloModal" class="text-white text-xl font-bold"></h2>
                            <p id="descripcionModal" class="text-cyan-200 text-sm mt-2 line-clamp-3"></p>
                        </div>

                        <div id="comentariosModal"
                            class="max-h-[250px] md:max-h-[350px] overflow-y-auto space-y-3 pr-2 custom-scrollbar flex-1">
                        </div>

                        <style>
                            .custom-scrollbar::-webkit-scrollbar {
                                width: 5px;
                            }

                            .custom-scrollbar::-webkit-scrollbar-track {
                                background: rgba(255, 255, 255, 0.05);
                                border-radius: 10px;
                            }

                            .custom-scrollbar::-webkit-scrollbar-thumb {
                                background: rgba(34, 211, 238, 0.3);
                                border-radius: 10px;
                            }

                            .custom-scrollbar::-webkit-scrollbar-thumb:hover {
                                background: rgba(34, 211, 238, 0.5);
                            }
                        </style>

                        <!-- comentario -->
                        <form id="formComentario" class="mt-4 pt-4 border-t border-white/10">
                            <input type="hidden" name="id_imagen" id="inputIdImagen">
                            <div class="flex gap-2">
                                <input type="text" name="texto" id="comentario"
                                    class="flex-1 bg-white/10 border border-white/20 rounded-lg px-3 py-2 text-white text-sm placeholder:text-white/40 focus:outline-none focus:border-cyan-400"
                                    placeholder="Comentar..." required>
                                <button type="submit"
                                    class="bg-cyan-600 hover:bg-cyan-500 text-white px-3 py-2 rounded-lg transition-colors">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                                    </svg>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Modal para subir imagen -->
            <div id="modalImagen"
                class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm hidden p-4">
                <div
                    class="bg-sky-950 rounded-2xl p-6 md:p-8 w-full max-w-md shadow-2xl relative border border-white/20">

                    <button id="cerrarModalImagen" type="button"
                        class="absolute top-2 right-4 text-3xl text-white/60 hover:text-white">&times;</button>

                    <h2 class="text-2xl font-bold mb-6 text-white text-center">Agregar imagen</h2>

                    <form action="/albumes/<%= album.id_album %>/imagenes/nueva" method="POST"
                        enctype="multipart/form-data" class="flex flex-col gap-4">

                        <input type="text" name="titulo" placeholder="Título"
                            class="bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white placeholder:text-white/40 focus:outline-none focus:border-cyan-400">

                        <textarea name="descripcion" placeholder="Descripción" rows="3"
                            class="bg-white/10 border border-white/20 rounded-xl px-4 py-3 text-white placeholder:text-white/40 focus:outline-none focus:border-cyan-400 resize-none"></textarea>

                        <div class="relative">
                            <input type="file" name="imagen" id="file-input" accept="image/*" required
                                class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10">
                            <div
                                class="bg-white/5 border-2 border-dashed border-white/20 rounded-xl p-6 text-center group-hover:border-cyan-400 transition-colors">
                                <span class="text-white/60 text-sm">Seleccionar archivo</span>
                            </div>
                        </div>

                        <button type="submit"
                            class="w-full bg-gradient-to-r from-cyan-400 to-cyan-600 font-bold text-white rounded-xl py-4 hover:scale-[1.02] transition-all shadow-lg shadow-cyan-500/20 mt-2">
                            SUBIR IMAGEN
                        </button>
                    </form>
                </div>

                <script src="/js/album.js"></script>
                <script src=" /socket.io/socket.io.js"></script>
                <script>
                    window.usuarioActual = {
                        id_usuario: "<%= usuario.id %>",
                        alias: "<%= usuario.alias %>",
                        imagen_perfil: "<%= usuario.imagen_perfil %>"
                    }
                </script>
                <script src="/js/comentarios.js"></script>

                <script>
                    async function toggleCompartir(id, btn) {
                        try {
                            const res = await fetch(`/albumes/imagenes/${id}/compartir`, { method: 'POST' });
                            const data = await res.json();
                            if (data.success) {
                                const svg = btn.querySelector('svg');
                                if (data.compartida) {
                                    btn.classList.add('text-yellow-400');
                                    btn.classList.remove('text-gray-400', 'opacity-0');
                                    svg.setAttribute('fill', 'currentColor');
                                    btn.title = 'Dejar de compartir';
                                } else {
                                    btn.classList.remove('text-yellow-400');
                                    btn.classList.add('text-gray-400', 'opacity-0');
                                    svg.setAttribute('fill', 'none');
                                    btn.title = 'Compartir con amigos';
                                }
                            }
                        } catch (err) {
                            console.error(err);
                        }
                    }
                </script>
</body>

<!-- TODO: CREAR PARTIALS PARA EVITAR LA IDENTACION -->

</html>