<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Perfil de Usuario - Artesanos.com</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen" style="background-image: url('/fondo.png'); background-size: cover; background-repeat: no-repeat; background-position: center;">

    <div class="fixed inset-0 backdrop-blur-md bg-black/10 z-0"></div>

    <div class="relative z-10 flex flex-row items-start justify-center min-h-screen w-full gap-10 py-16">

        <!-- muestro el perifl -->
        <div class="bg-orange-200/40 backdrop-blur-sm rounded-3xl p-10 flex flex-col items-center gap-4 shadow-2xl border border-orange-300/60 w-80">
            <img src="<%= usuario.imagen_perfil || '/default-profile.png' %>" alt="Imagen de perfil" class="w-40 h-40 rounded-full object-cover border-4 border-cyan-400 shadow-lg mb-4">
            <h2 class="text-3xl font-bold text-slate-800 text-center text-white"><%= usuario.nombre %></h2>
            <p class="text-lg text-cyan-400 font-semibold text-center">@<%= usuario.alias %></p>
            <p class="text-lg text-cyan-400 font-semibold text-center">intereses: <%= usuario.antecedentes === null ? 'el usuario no tiene antecedentes' : usuario.antecedentes %></p>
        </div>

        <!-- muestro los albumes -->
        <div class="flex-1">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-2xl font-bold text-white flex items-center gap-2">
                    Tus álbumes
                    <a href="#" class="text-white py-1 rounded-xl hover:scale-110 transition-all flex items-center" title="Agregar álbum">
    
                        <svg width="24" height="24" class="inline-block"><use href="#add"></use></svg>
                         
                    </a>
                </h3>
            </div>
            
            <% if (albumes && albumes.length > 0) { %>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    <% albumes.forEach(function(album) { %>
                        <div class="bg-white/80 rounded-xl shadow-lg p-4 flex flex-col items-center border border-orange-200">
                            <img src="<%= album.imagen_portada || '/default-album.png' %>" alt="Portada álbum" class="w-32 h-32 object-cover rounded-lg mb-3 border-2 border-cyan-300">
                            <div class="text-lg font-semibold text-cyan-800 text-center"><%= album.titulo %></div>
                            <div class="text-sm text-gray-500 text-center"><%= album.descripcion %></div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-white text-lg">No tienes álbumes creados aún.</div>
            <% } %>
        </div>
    </div>
<%- include('partials/icons') %>
</body>
</html>