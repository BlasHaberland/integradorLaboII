<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Perfil de Usuario - Artesanos.com</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="/favicon.png" type="image/png">
</head>

<body class="min-h-screen"
    style="background-image: url('/fondo.png'); background-size: cover; background-repeat: no-repeat; background-position: center;">

    <div class="fixed inset-0 backdrop-blur-md bg-black/10 z-0"></div>
    <%- include('partials/navbar') %>

        <div
            class="relative z-10 flex flex-col lg:flex-row items-center lg:items-start justify-center min-h-screen w-full gap-6 lg:gap-10 py-16 pt-20 md:pt-24 px-4 md:px-8">


            <% if (usuario) { %>
                <div
                    class="bg-orange-200/40 backdrop-blur-sm rounded-3xl p-6 md:p-10 flex flex-col items-center gap-4 shadow-2xl border border-orange-300/60 w-full max-w-sm lg:w-80">
                    <img src="<%= usuario.imagen_perfil || '/default-profile.png' %>" alt="Imagen de perfil"
                        class="w-32 h-32 md:w-40 md:h-40 rounded-full object-cover border-4 border-cyan-400 shadow-lg mb-2 md:mb-4">
                    <div class="flex items-center gap-2">
                        <h2 class="text-2xl md:text-3xl font-bold text-white text-center">
                            <%= usuario.nombre %>
                        </h2>
                    </div>
                    <div class="flex flex-wrap justify-center gap-2">
                        <button id="abrirModalSeguidos"
                            class="bg-cyan-500 px-4 py-2 rounded-lg text-white font-semibold text-sm hover:bg-cyan-400 hover:scale-110 transition-all">Seguidos</button>
                        <button id="abrirModalSolicitudes"
                            class="bg-cyan-500 px-4 py-2 rounded-lg text-white font-semibold text-sm hover:bg-cyan-400 hover:scale-110 transition-all">
                            Seguidores
                        </button>
                    </div>
                    <p class="text-lg text-cyan-400 font-semibold text-center">@<%= usuario.alias %>
                    </p>
                    <div class="bg-cyan-800/80 p-4 rounded-lg shadow-2xl w-full">
                        <p class="text-sm md:text-base text-cyan-300 font-semibold text-center mb-2">
                            Intereses: <%= usuario.intereses || 'El usuario no tiene intereses' %>
                        </p>
                        <hr class="border-white/20">
                        <p class="text-sm md:text-base text-cyan-300 font-semibold text-center mt-2">
                            Antecedentes: <%= usuario.antecedentes || 'El usuario no tiene antecedentes' %>
                        </p>
                    </div>
                </div>
                <% } %>


                    <div class="flex-1 w-full max-w-5xl">
                        <div class="flex items-center justify-between mb-6">
                            <h3 class="text-2xl font-bold text-white flex items-center gap-2">
                                Tus álbumes
                                <a href="#" id="abrirModalAlbum"
                                    class=" text-white py-1 rounded-xl hover:scale-110 transition-all flex items-center"
                                    title="Agregar álbum">
                                    <svg width="24" height="24" class="inline-block">
                                        <use href="#add"></use>
                                    </svg>
                                </a>
                            </h3>
                        </div>

                        <% if (albumes && albumes.length> 0) { %>
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                                <% albumes.forEach(function(album) { %>
                                    <a href="/albumes/<%= album.id_album %>" class="block">
                                        <div
                                            class="bg-cyan-800/90 rounded-xl shadow-lg p-4 flex flex-col items-center transition-transform duration-200 cursor-pointer hover:scale-105 hover:shadow-orange-400/20 hover:border-2 hover:border-orange-400 h-full">
                                            <img src="<%= album.portada || '/default-album.jpg' %>" alt="Portada álbum"
                                                class="w-full h-32 object-cover rounded-lg mb-3">
                                            <div
                                                class="text-lg font-semibold text-cyan-100 text-center truncate w-full">
                                                <%= album.titulo %>
                                            </div>
                                            <div class="text-sm text-white/80 text-center line-clamp-2 mt-1">
                                                <%= album.descripcion || 'Sin descripción' %>
                                            </div>
                                            <div class="flex flex-wrap gap-1 justify-center mt-auto pt-3">
                                                <% if (album.tags && album.tags.length> 0) { %>
                                                    <% album.tags.forEach(function(tag) { %>
                                                        <span
                                                            class="bg-cyan-900/60 text-cyan-200 px-2 py-0.5 rounded text-[10px] uppercase tracking-wider">
                                                            <%= tag.nombre %>
                                                        </span>
                                                        <% }) %>
                                                            <% } %>
                                            </div>
                                        </div>
                                    </a>
                                    <% }) %>
                            </div>
                            <% } else { %>
                                <div
                                    class="bg-black/30 backdrop-blur-sm p-12 rounded-2xl border border-white/10 text-center">
                                    <p class="text-white/60 italic text-xl">No tienes álbumes creados aún.</p>
                                </div>
                                <% } %>
                    </div>
        </div>

        <%- include('partials/icons') %>
            <%- include('partials/modales-home') %>
                <%- include('partials/notificacion-popout') %>

                    <!-- socket -->
                    <script src="/socket.io/socket.io.js"></script>
                    <script>
                        window.socket = io(); // Crea una instancia global de socket
                        window.socket.on('connect', function () {
                            console.log('Socket realmente conectado:', window.socket.id);
                            window.socket.emit('usuarioConectado', '<%= usuario.id_usuario %>');
                        });
                    </script>
                    <script src="/js/popout.sokcet.js"></script>

                    <!-- busqueda -->
                    <script src="/js/busqueda.js"></script>

</body>

</html>