<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Notificaciones - Artesanos.com</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="/favicon.png" type="image/png">
</head>

<body class="min-h-screen"
    style="background-image: url('/fondo.png'); background-size: cover; background-repeat: no-repeat; background-position: center; background-attachment: fixed;">
    <%- include('partials/navbar') %>

        <div class="fixed inset-0 backdrop-blur-md bg-black/10 z-0"></div>

        <div class="relative z-10 container mx-auto pt-24 pb-12 px-4 max-w-2xl">
            <div class="flex justify-between items-center mb-8">
                <h2 class="text-3xl font-bold text-white">Notificaciones</h2>
                <form action="/notificaciones/leer-todas" method="POST">
                    <button type="submit"
                        class="text-cyan-400 hover:text-white transition-colors text-sm font-semibold border border-cyan-400/50 px-4 py-2 rounded-lg hover:bg-cyan-400/20">
                        Marcar todas como le√≠das
                    </button>
                </form>
            </div>

            <div class="flex flex-col gap-4">
                <% if (notificaciones.length> 0) { %>
                    <% notificaciones.forEach(n=> { %>
                        <div
                            class="bg-black/40 backdrop-blur-md border <%= n.leida ? 'border-white/10' : 'border-cyan-400/50 bg-cyan-900/20' %> rounded-2xl p-4 flex justify-between items-center group transition-all">
                            <div class="flex items-center gap-4">
                                <div
                                    class="w-10 h-10 rounded-full flex items-center justify-center <%= n.tipo === 'comentario' ? 'bg-orange-500/20 text-orange-400' : 'bg-cyan-500/20 text-cyan-400' %>">
                                    <% if (n.tipo==='comentario' ) { %>
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                                        </svg>
                                        <% } else { %>
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                                                viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                                            </svg>
                                            <% } %>
                                </div>
                                <div>
                                    <p class="text-white <%= n.leida ? 'text-white/80' : 'font-semibold' %>">
                                        <%= n.mensaje %>
                                    </p>
                                    <div class="flex gap-2 mt-2">
                                        <% if (!n.leida && n.tipo==='amistad' && n.mensaje.includes('te ha')) { %>
                                            <form action="/amistades/actualizar" method="POST" class="inline">
                                                <input type="hidden" name="id_amistad" value="<%= n.id_referencia %>">
                                                <input type="hidden" name="accion" value="aceptar">
                                                <button type="submit"
                                                    class="bg-cyan-500 text-white text-xs px-3 py-1 rounded hover:bg-cyan-400 transition-colors">Aceptar</button>
                                            </form>
                                            <form action="/amistades/actualizar" method="POST" class="inline">
                                                <input type="hidden" name="id_amistad" value="<%= n.id_referencia %>">
                                                <input type="hidden" name="accion" value="rechazar">
                                                <button type="submit"
                                                    class="bg-red-500 text-white text-xs px-3 py-1 rounded hover:bg-red-400 transition-colors">Rechazar</button>
                                            </form>
                                            <% } else if (n.tipo==='comentario' ) { %>
                                                <a href="/albumes/ver-imagen-notif/<%= n.id_referencia %>"
                                                    class="text-cyan-400 text-xs hover:underline">Ver imagen</a>
                                                <% } %>
                                    </div>
                                    <span class="text-xs text-white/40 block mt-1">
                                        <%= new Date(n.creada_en).toLocaleString() %>
                                    </span>
                                </div>
                            </div>

                            <% if (!n.leida) { %>
                                <button onclick="marcarLeida('<%= n.id_notificacion %>')"
                                    class="text-cyan-400 opacity-0 group-hover:opacity-100 transition-opacity hover:text-white">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M5 13l4 4L19 7" />
                                    </svg>
                                </button>
                                <% } %>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div
                                    class="bg-black/30 backdrop-blur-sm p-8 rounded-2xl border border-white/10 text-center">
                                    <p class="text-white/60 italic">No tienes notificaciones pendientes.</p>
                                </div>
                                <% } %>
            </div>
        </div>

        <%- include('partials/icons') %>

            <script>
                async function marcarLeida(id) {
                    try {
                        const res = await fetch(`/notificaciones/${id}/leer`, { method: 'POST' });
                        if (res.ok) {
                            location.reload();
                        }
                    } catch (err) {
                        console.error(err);
                    }
                }
            </script>
</body>

</html>